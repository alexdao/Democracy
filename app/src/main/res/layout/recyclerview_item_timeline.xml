<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/rv_padding">

    <ImageView
        android:id="@+id/logo_photo"
        android:layout_width="@dimen/candidate_picture_diameter"
        android:layout_height="@dimen/candidate_picture_diameter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/candidate_picture_padding" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingEnd="@dimen/rv_padding"
        android:paddingRight="@dimen/rv_padding"
        android:paddingTop="@dimen/rv_padding"
        android:textSize="@dimen/main_text_size" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingEnd="@dimen/rv_padding"
        android:paddingRight="@dimen/rv_padding"
        android:textSize="@dimen/description_text_size" />
</RelativeLayout>