<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_layout_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/rv_padding">

        <ImageView
            android:id="@+id/person_photo"
            android:layout_width="@dimen/candidate_picture_diameter"
            android:layout_height="@dimen/candidate_picture_diameter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="6dp" />

        <com.lumivote.lumivote.ui.candidate_tab.Circle
            android:id="@+id/circle"
            android:layout_width="@dimen/candidate_picture_diameter"
            android:layout_height="@dimen/candidate_picture_diameter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingTop="16dp"
            android:textColor="@color/blackText"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/person_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/person_name"
            android:textColor="@color/blackText"
            android:textSize="@dimen/description_text_size" />

    </RelativeLayout>

</LinearLayout>
